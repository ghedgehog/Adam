<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunway.mapper.IIoDriverMapper">

    <!--addIoDrivers-->
    <insert id="addIoDrivers" parameterType="java.util.List">
        INSERT INTO io_drivers (name, server_pid, mark) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.name}, (SELECT id FROM io_uaservers WHERE name = #{server}), 1)
        </foreach>
    </insert>

    <!--deleteIoDrivers-->
    <delete id="deleteIoDrivers" parameterType="java.util.List">
        DELETE FROM io_drivers
        WHERE
        server_pid = (SELECT id FROM io_uaservers where name = #{server})
        AND
        name IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item.name}
        </foreach>
    </delete>

    <!--queryIoDrivers-->
    <select id="queryIoDrivers" resultType="com.sunway.model.IoDriver" >
        SELECT name FROM io_drivers
        WHERE
        server_pid = (SELECT id FROM io_uaservers WHERE name = #{server})
        AND
        mark = #{mark}
    </select>

    <!--setMark-->
    <update id="setMark" parameterType="java.util.List">
        UPDATE io_drivers SET mark = #{mark}
        WHERE name IN
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")" >
            #{item.name}
        </foreach>
    </update>

    <!--<update id="setMark" parameterType="java.util.List">
        UPDATE io_drivers SET mark=0 where name IN
        <foreach collection="drivers" index="index" item="item" open="(" separator="," close=")">
            #{item.name}
        </foreach>
    </update>-->

</mapper>